{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "sql:default",
    "sql:allow-execute",
    "sql:allow-close",
    "sql:allow-load",
    "sql:allow-select",
    "fs:default",
    "fs:allow-create",
    "fs:allow-write-file",
    "fs:allow-download-write",
    "fs:allow-download-write-recursive",
    "fs:read-dirs",
    "fs:read-files",
    "fs:read-meta",
    "fs:allow-fstat",
    "dialog:default",
    "updater:default",
    "process:default",
    "process:allow-restart",
    "shell:allow-open",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$DOWNLOAD/**"
        },
        {
          "path": "$AUDIO/**"
        },
        {
          "path": "$HOME/**"
        }
      ]
    }
  ]
}
